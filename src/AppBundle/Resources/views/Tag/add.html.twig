{% extends 'AppBundle:Layouts:main.html.twig' %}

{% block title %}
    Новый тег
{% endblock %}

{% block styles %}
    <link href="{{ asset('bundles/app/style/tag/add.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div>
        <form role="form" method="POST">
            <fieldset>
                <div>
                    {{ form_label(form.hashTag) }}
                    {{ form_widget(form.hashTag) }}
                </div>

                {{ form_rest(form) }}
                <div>
                    <input type="submit" value="создать тег">
                </div>
            </fieldset>
        </form>
    </div>
{% endblock %}
